
@{
    ViewBag.Title = "edit";
}
<style>
    .form{
        margin: 0 300px;
        margin-top:100px;
        border:solid 2px black;
        display:flex;
        justify-content:center;
        padding:20px;
       
    }
    .title{
        text-align:center;
        margin-bottom:20px;
    }
    .btn{
       margin: 0 50px;
       width:150px;
    }
    .form-control {
        background-color: rgb(232, 240, 254);
        width: 300px;
        height: 40px;
    }
    .form-control:hover {
        border: 2px solid blue;
    }
</style>

<div class="container">
    <div class="form">
        <form action="/News/edit" method="post">
            <h3 class="title">EDIT NEWS</h3>
            <input type="text" name="Title" value="@Model.Title" class="form-control" /><br />
            <input type="text" name="Description" value="@Model.Description" class="form-control" /><br />
            <input type="text" name="Category" value="@Model.Category" class="form-control" /><br />
            <input type="text" name="Title" value="@Model.DateOfPublished" class="form-control" /><br />
            <input type="hidden" name="ID" value="@Model.ID" />
            <input type="submit" class="btn btn-success" value="Edit" />
        </form>
    </div>
</div>



